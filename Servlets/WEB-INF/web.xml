<?xml version="1.0" encoding="UTF-8" ?>

<web-app>

    <display-name>HelloWorld Application</display-name>
    <description>
        This is a demo web application to print Hello World.
    </description>

    <servlet>
        <servlet-name>HelloWorld</servlet-name>
        <servlet-class>HelloWorld</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloWorld</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HttpRequestsDemo</servlet-name>
        <servlet-class>HttpRequestsDemo</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HttpRequestsDemo</servlet-name>
        <url-pattern>/https</url-pattern>
    </servlet-mapping>

</web-app>     
